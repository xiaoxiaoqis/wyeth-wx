.diet-item-box{
  position: relative;
  color: #fff;
  height: 100%;
  width: 100%;
  background-size: cover;
  background-position: center;
}
.diet-item-box:last-child{
  margin-right: 0;
}
.diet-item-box-bd{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
}
.diet-item-info{
  flex: 4;
  text-align: center;
}
.diet-time{
  font-size: 12px;
}
.diet-time-name{
  padding-bottom: 24rpx;
}
.diet-recipes{
  flex: 6;
  text-align: center;
  line-height: 1.8
}
.diet-cur text{
  margin-left: 16rpx;
}
.diet-cur text.active{
  color: #CD9E29;
}
.indicators{
  display: flex;
  padding: 20rpx 0;
  justify-content: center;
  align-items: center;
}
.indicators .indicator{
  width: 10rpx;
  height: 10rpx;
  border-radius: 10rpx;
  background: rgba(0, 0, 0, 0.2);
  margin-right: 10rpx;
}
.indicators .indicator.active{
  background: #CD9E29;
}
