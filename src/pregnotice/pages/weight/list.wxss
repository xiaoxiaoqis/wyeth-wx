/*添加按钮 已弃用*/

.add-btn::after,
.add-btn::before {
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -20%;
  content: '';
  width: 40%;
  height: 2px;
  background: #fff;
}

.add-btn::before {
  transform: rotateZ(90deg);
}

.add-btn:active {
  animation-name: btnRotate;
  animation-duration: 0.05s;
  animation-timing-function: ease-in-out;
}

.animate-slideFromBottom {
  animation-timing-function: ease-in-out;
  animation-name: slideFromBottom;
  animation-duration: 0.5s;
  /*animation-fill-mode: forwards;*/
}

.animate-slideBackToBottom {
  animation-name: slideBackToBottom;
  animation-duration: 0.5s;
  /*animation-fill-mode: forwards;*/
}

@keyframes breath {
  0% {
    box-shadow: 0 0 2px rgba(145, 135, 253, 0.2);
  }
  50% {
    box-shadow: 0 0 8px rgba(145, 135, 253, 0.8);
  }
  100% {
    box-shadow: 0 0 2px rgba(145, 135, 253, 0.2);
  }
}

@keyframes btnRotate {
  0% {
    transform: rotateZ(0);
  }
  100% {
    transform: rotateZ(45deg);
  }
}

@keyframes slideFromBottom {
  0% {
    opacity: 0;
    transform: translateY(100%);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideBackToBottom {
  0% {
    opacity: 1;
    transform: translateY(0);
  }
  100% {
    opacity: 0;
    transform: translateY(100%);
  }
}