/* pages/recipe/detail.wxss */
@import "../../components/likeAndShare/index.wxss";
.hd-cover {
  width: 100%;
  height: 250px;
  display: block;
  background-size: cover;
  background-position: center;
}

.btn-outline {
  margin: 0 20rpx 20rpx 0;
}

.recipe-name {
  font-size: 24px;
  text-align: center;
  margin: 30px 0 20px;
}

.section-bd {
  padding: 0 24rpx!important;
}

.section-hd {
  text-align: center;
  font-size: 17px;
  padding: 40rpx 24rpx!important;
}

.tags {
  text-align: center;
}

.info {
  margin: 20px 0 20px;
  display: flex;
}

.info .time {
  margin-right: 40px;
}

.nutrition-hd {
  display: flex;
  margin-bottom: 18px;
}

.nutrition-bd {
  width: 100%;
  height: 120px;
  overflow-x: auto;
  overflow-y: hidden;
}

.element-list {
  display: flex;
  flex-flow: row;
  flex-wrap: nowrap;
}

.element-box {
  flex-basis: 60px;
  display: block;
  margin-right: 15px;
  text-align: center;
}

.element-quantity {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 60px;
  height: 60px;
  border-radius: 50px;
  background: #EFEDFF;
  color: #CD9E29;
  text-align: center;
}

.element-quantity .unit {
  font-size: 12px;
  display: block;
}

.element-name {
  font-size: 12px;
  margin-top: 12px;
  word-break: break-all;
  word-wrap: break-word;
}

.materail-list {
  border-top: 1px solid #eee;
  font-size: 17px;
}

.materail-list-item {
  border-bottom: 1px solid #eee;
  line-height: 46px;
  display: flex;
}

.materail-name {
  flex: 6;
}

.materail-quantity {
  flex: 4;
}

.recipe-steps {
  margin-bottom: 30px;
  padding: 0 13px 0 0;
  overflow: hidden;
}

.recipe-step {
  display: flex;
}

.step-index {
  font-size: 24px;
  padding-right: 10px;
  line-height: 1;
}

.step-content {
  flex: 1;
  margin-bottom: 10px;
}

.step-content .step-img {
  width: 100%;
  background-size: cover;
  background-position: center;
  margin-bottom: 15px;
  background-color: #fefefe;
}

.step-content .step-img:after {
  content: '';
  padding-top: 56.25%;
  display: inline-block;
}

.step-text {
  word-wrap: break-word;
  word-break: break-all;
  font-size: 17px;
  line-height: 1.6;
  margin-bottom: 20px;
}