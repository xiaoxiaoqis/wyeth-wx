@import "../../components/wxParse/wxParse.wxss";
.section .content{
  padding:20rpx 24rpx 40rpx;
  line-height:24px;
}
.title-content{
  padding-right: 120rpx!important; 
}
.wxParse-b,.wxParse-h4,.wxParse-strong {
  font-weight:normal;
}
.wxParse-b:before{
  content:'';
  width: 14rpx;
  height:14rpx;
  display:inline-block;
  border-radius:100%;
  background:#FACDD2;
  margin-right:16rpx;
}
.wxParse-h4{
  position: relative;
  padding-top:10rpx;
  margin:0.52rem 0;
}
.wxParse-h4:before {
  position: absolute;
  content: " ";
  top: 0;
  left: 0;
  width: 100%;
  height: 1px;
  border-top: 1px solid #e5e5e5;
  color: #e5e5e5;
  transform-origin: 0 0;
  transform: scaleY(0.5);
}
.alternative-btn{
  position: absolute;
  right: 0;
  margin-top: 30rpx;
  width: 120rpx;
  height: 70rpx;
  background: #CD9E29;
  border-radius:  70rpx 0 0 70rpx;
  color: #fff;
  text-align: center;
  line-height: 70rpx;
}
.btn {
  padding: 40rpx;
  position: relative;
  bottom: 0;
}
.add-btn{
  margin: 0 auto;
  width:  200rpx;
  height: 70rpx;
  background: #CD9E29;
  border-radius: 70px;
  color: #fff;
  text-align: center;
  line-height: 70rpx;
}