/* single-rate.wxss */
@import "../../components/nameRater/index.wxss";
@import "../../components/nameBottom/index.wxss";
page{
  background: #322f37;
  color: #fff;
  padding-bottom: 20px;
}
.title{
  font-size: 15px;
  text-align: center;
  margin-top: 120rpx;
}
.content{
  font-size: 16px;
}
.content .intro{
  margin: 50rpx 40rpx 0;
}
.content .intro .list-item{
  margin: 0 70rpx;
}
.content .intro .border-1px-b::after{
  border-bottom: 0;
}
.content .intro .info{
  background: #3a373e;
  padding: 20rpx 24rpx;
  position: relative;
  font-size: 12px;
  margin-top: 12rpx;
  margin-bottom: 24rpx;
  line-height: 46rpx;
}
.content .intro .info::before{
  content: '';
  width: 0;
  height: 0;
  position: absolute;
  border: 16rpx solid rgba(0,0,0,0);
  border-bottom-color:#4e4c53;
  top:-32rpx;
  left: 132rpx;
}
.content .intro .info::after{
  content: " ";
  width: 200%;
  height: 200%;
  position: absolute;
  top: 0;
  left: 0;
  border: 2rpx solid #4e4c53;
  transform: scale(0.5);
  transform-origin: 0 0;
  box-sizing: border-box;
}
.content .info .detail-info{
  font-size:15px; 
  line-height: 56rpx;
}
.detail image{
  display: block;
  margin: 0 auto;
  width: 100%;
}