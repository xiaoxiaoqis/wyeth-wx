@import "../../components/wxParse/wxParse.wxss";
.banner{
  font-size: 0;
  margin-bottom: 20rpx;
  position: relative;
}
.banner .bg{
  width: 100%;
  height: 350rpx;
}
swiper{
  height: 50rpx;
  width: 60%;
  left: 10rpx;
  top: 10rpx;
  color: #fff;
  font-size: 12px;
  line-height: 50rpx;
  position: absolute;
  z-index: 1000;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 10rpx;
}
swiper text{
  display: inline-block;
  text-align: center;
}

swiper-item text{
  display: inline-block;
  padding:0 10rpx;
}
.top{
  position: relative;
}
.info{
  margin-top: 40rpx;
  text-align: center;
}
.info .label{
  position: absolute;
  right: 20rpx;
  top: 100rpx;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  z-index: 99;
}
.info .hint{
  color: #e79;
  padding: 6rpx 20rpx;
  display: inline-block;
  border: 1px solid #e79;
  border-radius: 20rpx;
}
.info .intro{
  font-size: 16px;
  margin-top: 20rpx;
}
.info .intro .warn{
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
  margin-right: 6rpx;
}
.info .timer{
  display: inline-block;
  background: #000;
  color: #fff;
  padding: 6rpx;
  margin:0 6rpx;
  border-radius: 8rpx;
  position: relative;
}
.info .timer::after{
  content: ':';
  color: #000;
  position: absolute;
  right: -6rpx;
}
.info .timer:nth-last-child(1)::after{
  content: ''
}
.list{
  margin: 20rpx 50rpx;
  display: flex;
  justify-content: space-around;
}
.list .item-box{
  position: relative;
  overflow: hidden;
}
.list .item-box image {
  width: 100rpx;
  height: 100rpx;
  border-radius:50%; 
  border: 1rpx dashed #aaa;
}
.list .leader image{
  border: 1px solid #999;
  position: relative;
}
.list .leader::after{
  content:'团长';
  position: absolute;
  width: 30px;
  height: 14px;
  line-height: 1.6;
  text-align: center;
  font-size: 10px;
  background: #999;
  border-radius: 8rpx;
  top: 80rpx;
  left: 20rpx;
  color: #fff;
}
.list .active image{
  border: 1px solid #2db1ff;
}
.list .active::after{
  background-color:#2db1ff;
}
.tip-box{
  padding: 10rpx 80rpx;
  text-align: center;
  font-size: 12px;
  color: #ea8010;
  line-height: 1.6;
}
.tip-box .warn-icon{
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
}
.tip-box .pic-list{
  color: #FFB800;
}
.tip-box .pic-list image{
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  margin: 10rpx 10rpx;
  border-radius:50%; 
}
.content{
  margin-bottom: 100rpx;
}
.button{
  color: #fff;
  width: 100%;
  position: fixed;
  bottom: 0;
  opacity: 0.95;
  font-size: 18px;
  height: 100rpx;
  border-radius:0px;
  background: #FB7089;
  line-height: 100rpx;
  text-align: center;
}
