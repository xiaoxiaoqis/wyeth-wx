.weui-search-bar {
  position: relative;
  height: 106rpx;
  box-sizing: border-box;
  padding: 16rpx 20rpx;
  background-color: #EFEFF4;
}
.weui-icon-search_in-box {
  padding: 0 20rpx;
}
.weui-search-bar__text {
  display: inline-block;
  font-size: 14px;
  vertical-align: middle;
}
.weui-search-bar__form {
  display: flex;
  flex-wrap: nowrap;
  overflow: hidden;
}
.weui-search-bar__box {
  position: relative;
  display: flex;
  flex:1;
  align-items: center;
  background: #FFFFFF;
  box-sizing: border-box;
}
.weui-search-bar__box:after{
  content: '';
  position:absolute;
  left:0;
  top: 0;
  border-radius: 10rpx;
  width: 200%;
  height: 200%;
  border: 1px solid rgba(0, 0, 0, 0.2);
  transform: scale(0.5);
  transform-origin: 0 0;
  box-sizing: border-box;
}
.weui-search-bar__input-box{
  position: relative;
  flex: 1;
}
.weui-search-bar__input {
  width: calc(100% - 100rpx);
  height: 70rpx;
  line-height: 70rpx;
  font-size: 14px;
}
.weui-icon-clear {
  padding: 22rpx 16rpx;
  font-size: 0;
  z-index: 4;
}
.weui-search-bar__cancel-btn {
  display: flex;
  align-items: center;
  padding-left:16rpx;
  height: 70rpx;
  line-height: 70rpx;
  color: #09BB07;
  white-space: nowrap;
}
.weui-search-bar__label {
  display: block;
  width: 100%;
  height: 70rpx;
  border-radius: 3px;
  color: #9B9B9B;
  background: #FFFFFF;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 2;
}
.weui-search-bar__label .weui-icon-search{
  margin-right: 10rpx;
}
