.action-bar{
  display: flex;
  justify-content: space-around;
  margin: 60rpx 0 40rpx;
}
.action-bar view {
  position: relative;
  width: 266rpx;
  height: 82rpx;
  line-height: 82rpx;
  text-align: center;
  color: #fff;
  background: #3a373e;
  border-radius: 8rpx;
  font-size: 18px;
}
.action-bar view::after{
  content: " ";
  width: 200%;
  height: 200%;
  position: absolute;
  top: 0;
  left: 0;
  transform: scale(0.5);
  transform-origin: 0 0;
  border: 2rpx solid #4e4c53;
  box-sizing: border-box;
  border-radius: 16rpx!important;  
}
.add-input-box{
  width: 80%;
  display: flex;
  margin: 24rpx auto 100rpx;
  padding-left: 24rpx;
  height: 80rpx;
  background: #3a373e;
  color: #fff;
  font-size: 16px;
  border-radius: 8rpx!important;    
}
.label{
  color: #fff;
  background:#4e4c53; 
  border-radius:0 8rpx 8rpx 0; 
  font-size: 18px;
  padding: 0 24rpx;
  line-height: 80rpx;
}
input{
  position: relative;
  height: 80rpx;
  flex: 1;
}