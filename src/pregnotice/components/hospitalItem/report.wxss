.box{
  padding: 20rpx 24rpx;
}
.top{
    line-height: 1;
    height: 68rpx;
    margin-bottom: 20rpx;
    color: #777777;
    font-size: 14px;
}
.top .label{
    font-size: 12px;
    float: right;
}
.top image{
  vertical-align: text-top;
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
}
.top .nick{
  padding-left: 5px; 
}
.top .date{
  font-size:12px;
  position:relative;
  left: 84rpx;
  top: -24rpx;
}
.content .content-detail {
  overflow: hidden;
  font-size: 14px;
  line-height: 46rpx;
}
.content .toggle{
  color: #6d859d;
}
.content .img-list{
  font-size: 0;
}
.content .img-item{
  display: inline-block;
  vertical-align: bottom;
  width: 31.8%;
  height: 0;
  padding-bottom: 31.8%;
  overflow: hidden;
  position: relative;
  margin-right:1.27%;
  margin-bottom: 10rpx;
}
.content .img-item image{
  width: 100%;
  height: 100%;
  position: absolute;
}
.content image:nth-child(3) {
  margin-right: 0;
}
.footer{
  font-size: 12px;
  margin-top: 10rpx;
  position: relative;
}
.footer .right{
  position: absolute;
  left: 90%;
}
.footer .right image{
  width: 15px;
  height: 15px;
  margin-right: 3px;
  vertical-align: text-top;
}