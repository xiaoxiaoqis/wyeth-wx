.list-item{
  justify-content: space-around;
  align-items: center;
  margin: 20rpx auto;
}
.list-item .num{
  font-size: 22px;
  font-weight: 500;
}
.list-item .middle{
  flex: 1;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 40rpx 20rpx;
  margin-left: 20rpx;
}
.list-item .name{
  flex: 1;
  font-size: 20px;
}
.list-item .score{
  font-size: 20px;
}
.list-item .unactive{
  font-size: 14px;
}
.list-item .share-btn{
  position: relative;
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 15px;
  margin-left: 30rpx;
  color: #fff;
  opacity: 0.95;
  background: #fff;
  padding: 0;
  border-radius: 0;
  background: #3a373e;
}
.list-item .share-btn::after{
  content: " ";
  width: 200%;
  height: 200%;
  position: absolute;
  top: 0;
  left: 0;
  border: 2rpx solid #e5e5e5;
  transform: scale(0.5);
  transform-origin: 0 0;
  box-sizing: border-box;
  border-radius: 20rpx!important;
}
.list-item .remove{
  font-size: 12px;
  color: #999;
  padding: 20rpx;
}